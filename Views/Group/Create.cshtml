@model TimeTrackingSystem.Models.Group
@using System.Security.Claims
@{
    ViewData["Title"] = "Create";
    var id = User.FindFirstValue("Id");
}

<h1 class="h3 mb-4 text-gray-800">
    <a asp-action="YourGroup" class="btn btn-secondary btn-icon-split mt-2">
        <span class="icon text-white-50">
            <i class="fas fa-backward"></i>
        </span>
        <span class="text font-weight-bold">Group Management</span>
    </a>
</h1>
<div class="card shadow mb-4 mx-auto" style="max-width: 500px;">
    <div class="card-header font-weight-bold text-primary py-3">
        Create Group
    </div>
    <div class="card-body row">
        <form class="mb-3 col-12" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-white"></div>
            <input asp-for="LeaderID" value="@id" hidden>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter group name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-12 mt-2">
                <button type="submit" class="mt-3 font-weight-bold btn btn-success btn-block">CREATE</button>
            </div>
        </form>
    </div>
</div>
