@model TimeTrackingSystem.Models.Group

@{
    ViewData["Title"] = "Edit";
}

<h1 class="h3 mb-4 text-gray-800">
    <a asp-action="YourGroup" class="btn btn-secondary btn-icon-split mt-2">
        <span class="icon text-white-50">
            <i class="fas fa-backward"></i>
        </span>
        <span class="text font-weight-bold">Task Management</span>
    </a>
</h1>
<div class="card shadow row flex-row">
    <div class="card-header font-weight-bold text-primary py-3">
        Edit Task
    </div>
    <div class="mb-4 col col-6">
        <div class="card-body row">
            <form class="mb-3 col-12" asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-white"></div>
                <input type="hidden" asp-for="GroupID" />
                <input type="hidden" asp-for="LeaderID" />
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter group name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mt-2">
                    <button type="submit" class="btn btn-primary btn-block mt-3">Update Now</button>
                    <a href="#" data-toggle="modal" data-target="#deleteModal"
                       class="btn btn-danger btn-block">Delete Now</a>
                </div>
            </form>
        </div>
    </div>
    <div class="mb-4 col col-6">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Email
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var member in Model.Members)
                        {
                            <tr>
                                <td>
                                    @member.Account.Name
                                </td>
                                <td>
                                    @member.Account.Email
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete group</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Select "Delete" below if you are ready to delete this group.</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary" asp-action="Delete" asp-route-id="@Model.GroupID">Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

    </script>
}