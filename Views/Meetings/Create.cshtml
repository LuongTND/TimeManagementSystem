@model TimeTrackingSystem.Models.Meeting

@{
    ViewData["Title"] = "Create";
}

<h1 class="h3 mb-4 text-gray-800">
    <a asp-action="GroupMeeting" class="btn btn-secondary btn-icon-split mt-2">
        <span class="icon text-white-50">
            <i class="fas fa-backward"></i>
        </span>
        <span class="text font-weight-bold">Meeting Management</span>
    </a>
</h1>
<div class="card shadow mb-4 mx-auto" style="max-width: 500px;">
    <div class="card-header font-weight-bold text-primary py-3">
        Book Meeting
    </div>
    <div class="card-body row">
        <form class="mb-3 col-12" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-white"></div>
            <div class="form-group">
                <label asp-for="OpenAt"></label>
                <input asp-for="OpenAt" class="form-control" placeholder="Enter task name">
                <span asp-validation-for="OpenAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CloseAt"></label>
                <input asp-for="CloseAt" class="form-control" placeholder="Enter task description">
                <span asp-validation-for="CloseAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupID"></label>
                <select asp-for="GroupID" class="form-control" asp-items="ViewBag.GroupID"></select>
                <span asp-validation-for="GroupID" class="text-danger"></span>
            </div>
            <div class="col-md-12 mt-2">
                <button type="submit" class="mt-3 font-weight-bold btn btn-success btn-block">BOOK</button>
            </div>
        </form>
    </div>
</div>
